{
    "parserOptions": {
      "ecmaVersion": 7,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "prettier/@typescript-eslint",
      "plugin:@stencil/recommended"
    ],
    "rules": {
      "@stencil/strict-boolean-conditions": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
